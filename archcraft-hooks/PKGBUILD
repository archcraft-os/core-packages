# Maintainer: Aditya Shakya <adi1090x@gmail.com>

pkgname="archcraft-hooks"
pkgver=1.0
pkgrel=6
pkgdesc='Pacman hooks for Archcraft to fix various system files'
url="https://github.com/archcraft-os/core-packages"
arch=('any')
license=('GPL3')

source=(
		"${pkgname}.hook"
		"${pkgname}-runner"
		'archcraft-lsb-release.hook'
		'archcraft-os-release.hook'
		'archcraft-reboot-required.hook'
		'archcraft-reboot-required'
		'archcraft-hook-nm.hook'
		'archcraft-hook-openbox.hook'
		'archcraft-hook-pixmaps.hook'
		'archcraft-hook-thunar.hook'
		'archcraft-hook-zsh.hook'
		'archcraft-hook-grub.hook'
		'archcraft-hooks-misc'
)

