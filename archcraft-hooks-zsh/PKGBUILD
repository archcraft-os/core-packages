source=('archcraft-hook-zsh.hook')

sha512sums=('9358eb29984b68d847b13cd1fa76564bf64149cdd8e71657e1483973070e26dd8b6ccece18545e18bb04497447762d14f95baafc60a364e6c7a0721d7a452c85')

package() {
  local hooks=${pkgdir}/usr/share/libalpm/hooks

  install -Dm644 archcraft-hook-zsh.hook "$hooks"/archcraft-hook-zsh.hook
}
