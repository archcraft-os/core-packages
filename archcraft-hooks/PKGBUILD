package() {
  local hooks=${pkgdir}/usr/share/libalpm/hooks
  local bin=${pkgdir}/usr/bin

  install -Dm644 ${pkgname}.hook           			"$hooks"/${pkgname}.hook
  install -Dm644 archcraft-lsb-release.hook      	"$hooks"/archcraft-lsb-release.hook
  install -Dm644 archcraft-os-release.hook       	"$hooks"/archcraft-os-release.hook
  install -Dm644 archcraft-reboot-required.hook  	"$hooks"/archcraft-reboot-required.hook
  install -Dm644 archcraft-hook-nm.hook  			"$hooks"/archcraft-hook-nm.hook
  install -Dm644 archcraft-hook-openbox.hook  		"$hooks"/archcraft-hook-openbox.hook
  install -Dm644 archcraft-hook-pixmaps.hook  		"$hooks"/archcraft-hook-pixmaps.hook
  install -Dm644 archcraft-hook-thunar.hook  		"$hooks"/archcraft-hook-thunar.hook
  install -Dm644 archcraft-hook-zsh.hook  			"$hooks"/archcraft-hook-zsh.hook
  install -Dm644 archcraft-hook-grub.hook  			"$hooks"/archcraft-hook-grub.hook

  install -Dm755 ${pkgname}-runner         			"$bin"/${pkgname}-runner
  install -Dm755 archcraft-reboot-required       	"$bin"/archcraft-reboot-required
  install -Dm755 archcraft-hooks-misc       		"$bin"/archcraft-hooks-misc
}
