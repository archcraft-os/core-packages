pkgname=archcraft-quickfixes
pkgver=1.0
pkgrel=2
pkgdesc="Fix New Issues Quickly On Archcraft"
url="https://github.com/archcraft-os/core-packages"
arch=('any')
license=('GPL3')
install="${pkgname}.install"

source=('quickfixes')
sha512sums=('745705eff78fb0ec3086dd6ab830137885b54f11f6212d8d4f14ce6f243825bc2294f24e80ec50da2a37683227d153706b7d3a2b5c9e780ca988b88fd1611fe8')

package() {
	local _fdir=${pkgdir}/usr/share/archcraft
	mkdir -p "$_fdir"

	install -Dm 644 quickfixes  "$_fdir"/quickfixes
}
