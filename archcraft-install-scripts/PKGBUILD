pkgname=archcraft-install-scripts
pkgver=2.0
pkgrel=0
pkgdesc='Archcraft Install Scripts'
url="https://github.com/archcraft-os/core-packages"
arch=('any')
license=('GPL3')

source=('chrooted_post_install.sh'
		'post_install.sh')

sha512sums=('93151e28b86f74812c0141cb795b00882a1bc7942932f7c946ed0a40e4f9556fc1d6e3ac7c5b88bf853f68a1a542b6f4298c6ae6b576f2fe21af7b9ced6ec233'
            '2d838f82cbc39bda6137d3428e16be01f4b8a614315a1de4f00dfef601decfde994fdf5885bc1b298260bb813440541b2366766204265a8e4a9b5b5fc831fd24')

package() {
	local bin=${pkgdir}/usr/bin
	
	install -Dm755 chrooted_post_install.sh 	${bin}/chrooted_post_install.sh
	install -Dm755 post_install.sh 				${bin}/post_install.sh
}
