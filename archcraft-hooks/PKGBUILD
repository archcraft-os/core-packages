package() {
	local hooks=${pkgdir}/usr/share/libalpm/hooks
	local pixmaps=${pkgdir}/usr/share/pixmaps
	local bin=${pkgdir}/usr/bin
	
	install -Dm644 archcraft-hooks.hook           	"$hooks"/archcraft-hooks.hook
	install -Dm644 archcraft-lsb-release.hook      	"$hooks"/archcraft-lsb-release.hook
	install -Dm644 archcraft-os-release.hook       	"$hooks"/archcraft-os-release.hook
	install -Dm644 archcraft-reboot-required.hook  	"$hooks"/archcraft-reboot-required.hook
	install -Dm644 archcraft-pixmaps.hook  			"$hooks"/archcraft-pixmaps.hook
	
	install -Dm755 archcraft-hooks-runner         	"$bin"/archcraft-hooks-runner
	install -Dm755 archcraft-reboot-required       	"$bin"/archcraft-reboot-required
	
	install -Dm755 archcraft.png       				"$pixmaps"/archcraft.png
	install -Dm755 archcraft.svg       				"$pixmaps"/archcraft.svg
	install -Dm755 archcraft-logo.png       		"$pixmaps"/archcraft-logo.png
	install -Dm755 archcraft-logo.svg       		"$pixmaps"/archcraft-logo.svg
	install -Dm755 archcraft-user.png       		"$pixmaps"/archcraft-user.png
	install -Dm755 archcraft-user.svg       		"$pixmaps"/archcraft-user.svg
}
