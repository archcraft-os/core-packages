pkgname=archcraft-install-scripts
pkgver=1.0
pkgrel=4
pkgdesc='Archcraft Install Scripts'
url="https://github.com/archcraft-os/core-packages"
arch=('any')
license=('GPL3')

source=(
		'chrooted_post_install.sh'
		'post_install.sh'
)

sha512sums=('6fdb3ddee1e6d8abedff88064140c5e283e53ccfd2cb3d7c6699b77cc6f9074eaa787e34af12c7500e73d6200f1fc2fc5d621733afd05e728058dbcd5bfdeb31'
            '001e216a84bb8646f414b9846e94ece00ca07ee298bcf7335bbdca587a42041b31f90d8d5aaf17f0de869950a3ffe1122428c1e71584bcb22191dcc3d1a2e0aa')

package() {
	local bin=${pkgdir}/usr/bin
	
	install -Dm755 chrooted_post_install.sh 	${bin}/chrooted_post_install.sh
	install -Dm755 post_install.sh 				${bin}/post_install.sh
}
